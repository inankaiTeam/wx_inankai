<template name="comment-item">
    <view class="i-comment">
        <view class="i-comment-avatar">
              <image src="../../images/logo.jpg" background-size="cover"></image>
        </view>
        <view class="i-comment-content">
            <view class="i-comment-name">
                <text>{{item.name}}</text>
            </view>
            <view class="i-comment-contents">
                <text>{{item.comment}}</text>  
            </view>
            <view class="i-comment-time">
                <text>{{item.time}}</text>
            </view>
        </view>
        <view class="i-comment-rightbar">
            <text>{{item.mycontent}}</text>
        </view>
    </view>
</template>