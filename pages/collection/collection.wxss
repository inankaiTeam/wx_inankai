/* pages/collection/collection.wxss */

@import '/style/feed.wxss';
.i-container{
    /*height: 100%;*/
    background-color: #f2f2f2;
    overflow: hidden;
    padding-bottom: 10rpx;
}
.edit{
    position: absolute;
    top:30rpx;
    right:30rpx;
}
.edit image{
    width: 44rpx;
    height:44rpx;
}
.i-banner{
    width:100%;
    height: 350rpx;
}
.i-banner image{
    width: 100%;
    height:100%;
}

.i-part1{
    border-top: 1px #f2f2f2 solid;
    border-bottom: 1px #f2f2f2 solid;
    background-color: #fff;
    height:220rpx;
}
.i-part1 .i-user-avatar{
    position: relative;
    top: -80rpx;
}
.i-part1 .i-user-avatar image {
    float: left;
    width: 140rpx;
    height:140rpx;
    border: 1px #f2f2f2 solid;
    margin: 0 40rpx 0 70rpx;
}
.i-part1 .i-userinfo-right{
    float: left;
    position: relative;
    top: -80rpx;
}
.i-part1 .i-userinfo-right .i-username{
    margin: 10rpx 0 45rpx;
    color: #fff;
}
.i-part1 .i-userinfo-right .i-username image{
    margin-left:10rpx;
    width: 32rpx;
    height:32rpx;
}
.i-part1 .i-userinfo-right .i-intro{
    font-size: 28rpx;
    margin-bottom:40rpx
}
.i-userinfo-bottom{
    position: relative;
    top:-80rpx;
    left:70rpx;
}
.i-info{
    float:left;
    margin-bottom:10rpx;
}
.i-info image{
    float:left;
    width:32rpx;
    height:32rpx;
    margin-top:8rpx;
    margin-right:10rpx;
}
.i-info text{
    font-size:32rpx;
}
.i-grade{
    margin-right: 80rpx;
}

.i-influence{
    width:100%;
    height:60rpx;
    background-color:#fff;
    border-bottom: 1px #f2f2f2 solid;
    position: relative;
}
.i-influence image{
    float:left;
    width:32rpx;
    height:32rpx;
    margin-top:10rpx;
    margin-right:10rpx
}
.i-influence .i-like-num{
    position: absolute;
    left:70rpx;
}
.i-influence .i-collection-num{
    position: absolute;
    left:200rpx;
}
.i-influence text{
    font-size:30rpx;
}
.i-card-num text, .i-collections text{
    display: block;
    text-align: center;
    font-size: 30rpx;
}
.i-card-num{
    float: left;
    border-right: 1px #f2f2f2 solid;
    /*margin-left: 20rpx;*/
    padding: 0 40rpx;
}
.i-part1 .num{
    position: relative;
    top:-10rpx;
}
.i-part1 .name{
    position: relative;
    top:10rpx;
}
.i-collections{
    float: left;
    padding: 0 40rpx;
}

.i-part2{
    background-color:#fff;
    margin:20rpx 0 0;
    border-top: 1px #f2f2f2 solid;
}
.i-part2 li{
    display: block;
    font-size: 32rpx;
    line-height:60rpx;
    border-bottom: 1px #f2f2f2 solid;
    padding: 20rpx 0 20rpx 20rpx;
    
}
.i-part2 image{
    margin:0rpx 24rpx 0;
    width:45rpx;
    height:45rpx;
    float:right;
    margin-top:26rpx;
}
.i-allfeed{
    background-color: #fff;
}
