.i-hot-topic {
    margin: 20rpx 0;
    background-color: #fff;
    overflow: hidden;
    border-bottom: 1px #bbb solid;
}
.i-hot-topic .h2{
    font-weight:bold;
    padding: 20rpx 0;
    border-top: 1px #bbb solid;
    border-bottom: 1px #bbb solid;
}
.i-hot-topic .h2 image{
    margin:0rpx 20rpx 0;
    width:45rpx;
    height:45rpx;
    margin-bottom:-3px;
}
.i-hot-topic li{
    display: block;
    font-size: 28rpx;
    border-bottom: 1px #e8e8e8 solid;
    padding: 20rpx 0 20rpx 20rpx;
    
}
